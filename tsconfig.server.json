{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "build",
        "target": "es5",
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": false,
        "isolatedModules": false,
        "types": ["node"]
    },
    "exclude": [".next", "build", "node_modules"],
    "include": ["./server/**/*.ts"],
}